<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.luke.receiptmanager.AddReceipt"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#2196F3">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgReceipt"
            android:clickable="false" />
    </LinearLayout>

    <Button
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnChooseImage"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/ic_menu_camera"
        android:textColor="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/addReceiptTitle"
            android:id="@+id/lblTitle"
            android:textColor="#ffffff"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:textColor="#212121" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/addReceiptCategory"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp" />

        <Spinner
            android:layout_width="193dp"
            android:layout_height="45dp"
            android:id="@+id/spnCategory"
            android:textColor="#ffffff"
            android:layout_marginTop="2dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddCategoryFromAddReceipt"
            android:background="@mipmap/green_plus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/addReceiptMoneySpent"
            android:id="@+id/lblAmountSpent"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAmountSpent"
            android:layout_gravity="right"
            android:textColor="#212121"
            android:inputType="numberDecimal" />
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addReceiptBtn"
        android:id="@+id/btnAddReceipt"
        android:layout_gravity="center_horizontal"
        android:background="#8BC34A"
        android:textColor="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

</LinearLayout>
