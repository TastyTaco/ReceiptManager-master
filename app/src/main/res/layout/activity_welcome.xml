<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luke.receiptmanager.WelcomeActivity"
    android:background="#2196F3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Receipt Manager"
        android:id="@+id/textView6"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please log in, or register."
        android:id="@+id/textView7"
        android:layout_marginTop="33dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnWelcomeRegister"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="49dp"
        android:background="#8BC34A"
        android:textColor="#ffffff"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/btnWelcomeLogIn"
        android:background="#8BC34A"
        android:textColor="#ffffff"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_alignTop="@+id/btnWelcomeRegister"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If you do not wish to have your receipts uploaded to the cloud, please continue without registering."
        android:id="@+id/textView8"
        android:layout_marginTop="45dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/btnWelcomeRegister"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/btnContinue"
        android:layout_marginTop="59dp"
        android:background="#8BC34A"
        android:textColor="#ffffff"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
